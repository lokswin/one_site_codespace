{
  "name": "OnePage Browser Container",
  "build": {
      "dockerfile": "Dockerfile",
      "context": ".."
  },
  "runArgs": [
      "--cap-drop=ALL",
      "--cap-add=NET_ADMIN",
      "--security-opt",
      "no-new-privileges:true",
      "--read-only"
  ],
  "settings": {
      "terminal.integrated.defaultProfile.linux": "/bin/bash"
  },
  "postCreateCommand": "bash /usr/local/bin/entrypoint.sh",
  "extensions": []
}